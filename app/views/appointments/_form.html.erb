<%= simple_form_for [@user, @appointment] do |f| %>
      <div class=" form-inputs">
        <%= f.input :date %>
        <%= f.input :time %>
        <%= f.association :patient, collection: Patient.order(:name), include_blank: false, label: "Paciente" %>
      </div>
      <p>* Es necesario que lo completes</p>
      <div class="dropdown-divider"></div>
      <div class="text-center mb-5">
        <%= f.button :submit, "Guardar", class: "btn btn-primary" %>
      </div>
    <% end %>